<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.test_8_1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_main_iv1"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/id_main_tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_main_iv2"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/id_main_tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_main_iv3"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/id_main_tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/id_main_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
